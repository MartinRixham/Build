#! /bin/bash

set -Eeuo pipefail

RECIPE=recipe.json

map()
{
	while read line; do
		$@ $line
	done
}

filter()
{
	while read line; do
		if $($@ $line > /dev/null); then
			echo $line
		fi
	done
}

not()
{
	while read line; do
		if ! $($@ $line > /dev/null); then
			echo $line
		fi
	done
}

verbose()
{
	echo $@
	$@
}

all()
{
	echo $(cat)
}

clean()
{
	rm -rf build
}

get_sources()
{
	find $1 -name *.c
}

get_link()
{
	echo -l$1
}

get_links()
{
	cat $RECIPE | $JQ -c .dependencies | $JQ -c .[] | $1 | $JQ -r .package | map get_link
}

get_compiler()
{
	cat $RECIPE | $JQ -r .compiler
}

get_name()
{
	cat $RECIPE | $JQ -r .name
}

get_test()
{
	echo test
}

is_test_dependency()
{
	echo $1 | $JQ .scope | grep test
}

source_dependencies()
{
	not is_test_dependency
}

compile()
{
	verbose $(get_compiler) -o build/$1/$($2) $(get_sources $1) $(get_links $3)
}

compile_source()
{
	compile src get_name source_dependencies
}

build_recipe()
{
	jq --version > /dev/null
	JQ=$(which jq)
	mkdir -p build/src
	compile_source
}

compile_tests()
{
	compile test get_test all
}

test_recipe()
{
	build_recipe
	mkdir -p build/test
	compile_tests
	build/test/test
}

do_task()
{
	case $1 in
		clean) clean;;
		build) build_recipe;;
		test) test_recipe;;
	esac
}

for task in $@; do
	do_task $task
done
