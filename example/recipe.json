{
	"name": "example",
	"compiler": "gcc -g -Wall",
	"packaging": "executable",
	"dependencies":
		[
			{
				"package": "glib-2.0"
			},
			{
				"package": "check",
				"scope": "test"
			}
		],
	"plugins":
		[
			{
				"name": "cppcheck",
				"phase": "validate"
			},
			{
				"name": "valgrind",
				"phase": "verify",
				"config":
					{
						"args": "wibble"
					}
			},
			{
				"name": "gprof",
				"phase": "verify"
			}
		]
}
