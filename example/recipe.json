{
	"name": "example",
	"compiler": "gcc -g -Wall",
	"args": "--no-worries",
	"packaging": "executable",
	"modules":
		[
			"submod"
		],
	"dependencies":
		[
			{
				"package": "glib-2.0"
			},
			{
				"package": "check",
				"scope": "test"
			},
			{
				"package": "subxample",
				"scope": "module"
			},
			{
				"package": "subsubxample",
				"scope": "module"
			}
		],
	"plugins":
		[
			{
				"name": "cppcheck",
				"phase": "validate"
			},
			{
				"name": "valgrind",
				"phase": "verify",
				"config":
					{
						"args": "wibble"
					}
			},
			{
				"name": "gcovr",
				"phase": "verify"
			},
			{
				"name": "gprof",
				"phase": "verify"
			}
		],
	"define":
		{
			"DEBUG": ""
		}
}
